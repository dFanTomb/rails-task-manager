<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1> Task <%= @task.title %></h1>

   <%= link_to edit_task_path(@task), class: 'btn btn-light btn-sm border' do %>
      <i class="fa fa-pencil"></i> Edit
    <% end %>

    <%= link_to task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
      <i class="fa-solid fa-trash"></i> Delete
    <% end %>
  </div>

    <p class="well"><%= @task.details %></p>

    <% if @task.completed %>
        <i class="fa fa-check-square-o"></i> This task is completed
      <% else %>
        <i class="fa fa-square-o"></i> This task is not completed yet
    <% end %>

    <hr>
    <%= link_to tasks_path do %>
      <i class="fa-solid fa-arrow-rotate-left"></i> Back to tasks
    <% end %>
</div>
